@{
    ViewBag.Title = "后台管理系统";
}

<style type="text/css">
    .head-bar {
        background-color: #35537E;
        background: -webkit-linear-gradient(top,#627FA9,#35537E);
        background: -moz-linear-gradient(top,#627FA9,#35537E);
        background: -o-linear-gradient(top,#627FA9,#35537E);
        background: -ms-linear-gradient(top,#627FA9,#35537E);
        padding: 10px;
        margin-bottom: 2px;
        color: white;
    }
</style>
<div data-options="region:'north',border:false" class="head-bar">
    <b style="font-size: 20px; font-family: 'Microsoft YaHei';">@ViewBag.Title</b>&emsp;&emsp;
    <a class="white noline" target="_blank" href="http://ac.ppdai.com/"></a>&emsp;&emsp;
</div>
<div data-options="region:'west',split:true,title:'导航'" style="width: 260px; padding: 5px 2px;">
    <div id="tt">
    </div>
    <ul id="menu_list" class="easyui-tree" data-options="animate:true">
        <li>
            <span>系统配置</span>
            <ul>
                <li><a href="@Url.Action("List", "SysConfig")" target="main">键值设置</a></li>
            </ul>
        </li>
    </ul>
</div>
<div data-options="region:'south',border:false" style="height: 10px; background: #D2E0F2; padding: 10px;">
</div>
<div data-options="region:'center'" style="background: #eee; overflow-y: hidden">
    <div id="tabs" class="easyui-tabs" data-options="fit:true,border:false" style="overflow: hidden;">
        <div title="欢迎使用" style="overflow: hidden;">
            <iframe scrolling="auto" frameborder="0" src="@Url.Action("Introduction", "Home")" style="width: 100%; height: 100%;"></iframe>
        </div>
    </div>
</div>
<div id="mm" class="easyui-menu" style="width: 150px;">
    <div id="mm-tabupdate">刷新</div>
    <div class="menu-sep"></div>
    <div id="mm-tabclose">关闭</div>
    <div id="mm-tabcloseall">全部关闭</div>
    <div id="mm-tabcloseother">除此之外全部关闭</div>
    <div class="menu-sep"></div>
    <div id="mm-tabcloseright">当前页右侧全部关闭</div>
    <div id="mm-tabcloseleft">当前页左侧全部关闭</div>
</div>
<script src="http://www.ppdaicdn.com/invest/admin/js/main.js"></script>
